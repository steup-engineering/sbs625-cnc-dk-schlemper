o<touch-cross-y> sub
  ( constants )
  #<EPSILON> = 0.05

  ( check a/c )
  G28.1
  #<pos_a> = #5164
  #<pos_c> = #5166
  #<CROSS_OFFSET_X> = 0.0
  #<CROSS_OFFSET_Y> = 0.0
  #<TOUCH_C_OFFSET> = #2045
  o<l01> if [ABS[#<pos_a>] GT #<EPSILON>]
    (MSG, _{A must be at 0 for touchoff})
    m2
  o<l01> endif
  o<l02> if [ABS[#<pos_c>] LE #<EPSILON>]
    #<CROSS_OFFSET_X> = #2006
    #<CROSS_OFFSET_Y> = #2007
  o<l02> endif
  o<l03> if [ABS[#<pos_c> - #<TOUCH_C_OFFSET>] LE #<EPSILON>]
    #<CROSS_OFFSET_X> = #2013
    #<CROSS_OFFSET_Y> = #2014
  o<l03> endif
  o<l10> if [#<CROSS_OFFSET_X> EQ 0.0 AND #<CROSS_OFFSET_Y> EQ 0.0]
    (MSG, _{C must be at 0 or 270 for touchoff})
    m2
  o<l10> endif

  ( set reference point)
  G10 L20 P0 Y#<CROSS_OFFSET_Y>
o<touch-cross-y> endsub
